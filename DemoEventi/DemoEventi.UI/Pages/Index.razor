@page "/"

<PageTitle>Home - DemoEventi</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron">
                <h1 class="display-4">Welcome to DemoEventi</h1>
                <p class="lead">A comprehensive event management system built with .NET MAUI Blazor and Clean Architecture.</p>
                <hr class="my-4">
                <p>Manage users, events, and interests with a modern, responsive interface that works on both web and mobile.</p>
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Users</h5>
                                <p class="card-text">Create and manage user profiles with interests.</p>
                                <a href="users" class="btn btn-primary">Manage Users</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Events</h5>
                                <p class="card-text">Create events and manage participants.</p>
                                <a href="events" class="btn btn-primary">Manage Events</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Interests</h5>
                                <p class="card-text">Browse the catalog of available interests.</p>
                                <a href="users" class="btn btn-primary">View Interests</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
