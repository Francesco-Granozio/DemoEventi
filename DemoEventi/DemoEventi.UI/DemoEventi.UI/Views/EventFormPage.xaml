<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemoEventi.UI.Views.EventFormPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding PageTitle}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!--  Error Message  -->
            <Frame
                Padding="10"
                BackgroundColor="Red"
                IsVisible="{Binding HasError}">
                <Label
                    HorizontalOptions="Center"
                    Text="{Binding ErrorMessage}"
                    TextColor="White" />
            </Frame>

            <!--  Loading Indicator  -->
            <ActivityIndicator
                HorizontalOptions="Center"
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}" />

            <!--  Form Content  -->
            <VerticalStackLayout IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" Spacing="15">

                <!--  Event Name  -->
                <VerticalStackLayout Spacing="5">
                    <Label FontAttributes="Bold" Text="Event Name" />
                    <Entry Placeholder="Enter event name" Text="{Binding Name}" />
                </VerticalStackLayout>

                <!--  Location  -->
                <VerticalStackLayout Spacing="5">
                    <Label FontAttributes="Bold" Text="Location" />
                    <Entry Placeholder="Enter location" Text="{Binding Location}" />
                </VerticalStackLayout>

                <!--  Start Date  -->
                <VerticalStackLayout Spacing="5">
                    <Label FontAttributes="Bold" Text="Start Date" />
                    <DatePicker Date="{Binding StartDate}" />
                </VerticalStackLayout>

                <!--  Start Time  -->
                <VerticalStackLayout Spacing="5">
                    <Label FontAttributes="Bold" Text="Start Time" />
                    <TimePicker Time="{Binding StartTime}" />
                </VerticalStackLayout>

                <!--  Participants  -->
                <VerticalStackLayout Spacing="5">
                    <Label FontAttributes="Bold" Text="Participants" />
                    <Frame Padding="10" BackgroundColor="LightGray">
                        <CollectionView HeightRequest="200" ItemsSource="{Binding AvailableUsers}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="5" ColumnDefinitions="Auto,*">
                                        <CheckBox
                                            Grid.Column="0"
                                            IsChecked="{Binding IsSelected}"
                                            VerticalOptions="Center" />
                                        <Label
                                            Grid.Column="1"
                                            Margin="10,0,0,0"
                                            Text="{Binding Name}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Frame>
                </VerticalStackLayout>

                <!--  Buttons  -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Button
                        Command="{Binding SubmitCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                        Text="{Binding SubmitButtonText}" />
                    <Button
                        Command="{Binding CancelCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                        Text="Cancel" />
                </HorizontalStackLayout>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
