<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemoEventi.UI.Views.EventsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*,Auto">

        <!--  Header  -->
        <HorizontalStackLayout
            Grid.Row="0"
            Padding="20,10"
            Spacing="10">
            <Button
                Command="{Binding CreateEventCommand}"
                HorizontalOptions="Start"
                Text="Create Event" />
            <Button
                Command="{Binding RefreshCommand}"
                HorizontalOptions="End"
                Text="Refresh" />
        </HorizontalStackLayout>

        <!--  Error Message  -->
        <Frame
            Grid.Row="1"
            Margin="20,0"
            Padding="10"
            BackgroundColor="Red"
            IsVisible="{Binding HasError}">
            <Label
                HorizontalOptions="Center"
                Text="{Binding ErrorMessage}"
                TextColor="White" />
        </Frame>

        <!--  Loading Indicator  -->
        <ActivityIndicator
            Grid.Row="1"
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center" />

        <!--  Events List  -->
        <RefreshView
            Grid.Row="1"
            Command="{Binding RefreshCommand}"
            IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}">
            <CollectionView ItemsSource="{Binding Events}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10,5" Padding="15">
                            <Grid ColumnDefinitions="*,Auto,Auto">
                                <VerticalStackLayout Grid.Column="0" Spacing="5">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="18"
                                        Text="{Binding Name}" />
                                    <Label
                                        FontSize="14"
                                        Text="{Binding Location}"
                                        TextColor="Gray" />
                                    <Label
                                        FontSize="14"
                                        Text="{Binding StartDate, StringFormat='{0:g}'}"
                                        TextColor="Gray" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding ParticipantCount, StringFormat='{0} participants'}"
                                        TextColor="Blue" />
                                </VerticalStackLayout>

                                <Button
                                    Grid.Column="1"
                                    Margin="10,0,5,0"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditEventCommand}"
                                    CommandParameter="{Binding}"
                                    Text="Edit" />

                                <Button
                                    Grid.Column="2"
                                    Margin="5,0,0,0"
                                    BackgroundColor="Red"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteEventCommand}"
                                    CommandParameter="{Binding}"
                                    Text="Delete" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label
                            FontSize="18"
                            Text="No events found"
                            TextColor="Gray" />
                        <Button
                            Margin="0,10,0,0"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CreateEventCommand}"
                            Text="Create First Event" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

    </Grid>

</ContentPage>
