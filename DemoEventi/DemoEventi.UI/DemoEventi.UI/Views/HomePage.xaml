<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemoEventi.UI.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="Welcome to DemoEventi" />

            <Label
                FontSize="18"
                HorizontalOptions="Center"
                SemanticProperties.Description="Welcome to DemoEventi application"
                Text="Manage your events, users, and interests"
                TextColor="Gray" />

            <Frame Margin="0,20,0,0" Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Button
                        Command="{Binding NavigateToUsersCommand}"
                        HorizontalOptions="Center"
                        SemanticProperties.Hint="Navigate to users page"
                        Text="Users" />

                    <Button
                        Command="{Binding NavigateToEventsCommand}"
                        HorizontalOptions="Center"
                        SemanticProperties.Hint="Navigate to events page"
                        Text="Events" />

                    <Button
                        Command="{Binding NavigateToInterestsCommand}"
                        HorizontalOptions="Center"
                        SemanticProperties.Hint="Navigate to interests page"
                        Text="Interests" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
