<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DemoEventi.UI.Views.HomePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <Label 
                Text="Welcome to DemoEventi"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label 
                Text="Manage your events, users, and interests"
                SemanticProperties.Description="Welcome to DemoEventi application"
                FontSize="18"
                HorizontalOptions="Center"
                TextColor="Gray" />

            <Frame Padding="20" Margin="0,20,0,0">
                <VerticalStackLayout Spacing="15">
                    <Button 
                        Text="Users"
                        SemanticProperties.Hint="Navigate to users page"
                        Command="{Binding NavigateToUsersCommand}"
                        HorizontalOptions="Center" />

                    <Button 
                        Text="Events"
                        SemanticProperties.Hint="Navigate to events page"
                        Command="{Binding NavigateToEventsCommand}"
                        HorizontalOptions="Center" />

                    <Button 
                        Text="Interests"
                        SemanticProperties.Hint="Navigate to interests page"
                        Command="{Binding NavigateToInterestsCommand}"
                        HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
