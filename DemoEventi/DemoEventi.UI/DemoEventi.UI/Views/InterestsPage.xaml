<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DemoEventi.UI.Views.InterestsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10" Padding="20,10">
            <Label Text="Available Interests" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   VerticalOptions="Center" />
            <Button Text="Refresh" 
                    Command="{Binding RefreshCommand}"
                    HorizontalOptions="End" />
        </HorizontalStackLayout>

        <!-- Error Message -->
        <Frame Grid.Row="1" 
               IsVisible="{Binding HasError}"
               BackgroundColor="Red"
               Padding="10"
               Margin="20,0">
            <Label Text="{Binding ErrorMessage}" 
                   TextColor="White"
                   HorizontalOptions="Center" />
        </Frame>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="1" 
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center" />

        <!-- Interests List -->
        <RefreshView Grid.Row="1" 
                     Command="{Binding RefreshCommand}"
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Interests}"
                           IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10,5" Padding="15">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding Name}" 
                                       FontSize="18" 
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Description}" 
                                       TextColor="Gray" 
                                       FontSize="14" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Empty State -->
        <VerticalStackLayout Grid.Row="1" 
                             IsVisible="{Binding Interests.Count, Converter={StaticResource CountToVisibilityConverter}}"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">
            <Label Text="No interests found" 
                   FontSize="18" 
                   TextColor="Gray" />
        </VerticalStackLayout>

    </Grid>

</ContentPage>
