<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DemoEventi.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:DemoEventi.UI.Converters"
    xmlns:local="clr-namespace:DemoEventi.UI"
    xmlns:views="clr-namespace:DemoEventi.UI.Views"
    Title="DemoEventi">

    <Shell.Resources>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    </Shell.Resources>

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate views:HomePage}"
                Route="HomePage" />
        </Tab>
        
        <Tab Title="Users" Icon="user.png">
            <ShellContent
                Title="Users"
                ContentTemplate="{DataTemplate views:UsersPage}"
                Route="UsersPage" />
        </Tab>
        
        <Tab Title="Events" Icon="event.png">
            <ShellContent
                Title="Events"
                ContentTemplate="{DataTemplate views:EventsPage}"
                Route="EventsPage" />
        </Tab>
        
        <Tab Title="Interests" Icon="interest.png">
            <ShellContent
                Title="Interests"
                ContentTemplate="{DataTemplate views:InterestsPage}"
                Route="InterestsPage" />
        </Tab>
    </TabBar>

</Shell>
