<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DemoEventi.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DemoEventi.UI"
    xmlns:views="clr-namespace:DemoEventi.UI.Views"
    xmlns:converters="clr-namespace:DemoEventi.UI.Converters"
    Shell.FlyoutBehavior="Disabled"
    Title="DemoEventi">

    <Shell.Resources>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    </Shell.Resources>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage" />

    <ShellContent
        Title="Users"
        ContentTemplate="{DataTemplate views:UsersPage}"
        Route="UsersPage" />

    <ShellContent
        Title="Events"
        ContentTemplate="{DataTemplate views:EventsPage}"
        Route="EventsPage" />

    <ShellContent
        Title="Interests"
        ContentTemplate="{DataTemplate views:InterestsPage}"
        Route="InterestsPage" />

    <ShellContent
        Title="User Form"
        ContentTemplate="{DataTemplate views:UserFormPage}"
        Route="UserFormPage" />

    <ShellContent
        Title="Event Form"
        ContentTemplate="{DataTemplate views:EventFormPage}"
        Route="EventFormPage" />

</Shell>
